    



<style type="text/css">
  background:  assets-url("lock-1.jpg") 
</style>
<body class="login">
    <div id="content">
        <div class="container-fluid">
            <div class="lock-container">
                <h1 style="color:#000000">Account Access</h1>
                <div class="panel panel-default text-center">
                    <img src="/assets/guy-5.jpg" class="img-circle" id="name1">
                    <div class="panel-body">
                    <%= bootstrap_form_for(@profile, :html => { :multipart => true }) do |f| %>


                    <%= f.text_field :name , :class => "form-control"%>
                    <%= f.text_field :familyName ,:class => "form-control"%>
                    <%= f.date_field :date_of_birth ,:class => "form-control"%>
                    <%= f.text_field :Job ,:class => "form-control"%>

                    <%= f.text_field :country ,:class => "form-control"%>

                    <%= f.text_field :Gender ,:class => "form-control"%>

                    <%= f.file_field :avatar,:class => "form-control" %>

                    <%= f.file_field :uploaded_file,:class => "form-control" %>

                    <%= f.submit "Done", :class => "btn btn-primary"%>
                    <span class="fa fa-fw fa-unlock-alt"></span>
                    <% end %>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $('#name1').on('click',function(){
            $('#profile_avatar').click();
        });
        
    </script>
</body>


